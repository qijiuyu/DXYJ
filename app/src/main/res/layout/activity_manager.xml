<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/icon_bj">

   <include layout="@layout/head_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:background="@android:color/white"
                    android:text="直线管压接"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bottom_next"/>

                <TextView
                    android:id="@+id/tv_straight_before"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_click"
                    android:text="压接前"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <View
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:background="@android:color/black"/>

                <TextView
                    android:id="@+id/tv_straight_after"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_click"
                    android:text="压接后"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <View
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:background="@android:color/black"/>

                <TextView
                    android:id="@+id/tv_straight_bending"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_click"
                    android:text="弯曲度"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:background="@android:color/white"
                    android:text="耐张管压接"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bottom_next"/>

                <TextView
                    android:id="@+id/tv_tension_before"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_click"
                    android:text="压接前"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <View
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:background="@android:color/black"/>

                <TextView
                    android:id="@+id/tv_tension_after"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_click"
                    android:text="压接后"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <View
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:background="@android:color/black"/>

                <TextView
                    android:id="@+id/tv_tension_bending"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_click"
                    android:text="弯曲度"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp">

            <TextView
                android:id="@+id/tv_total_straight"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:background="#96c1ff"
                android:textStyle="bold"
                android:text="直线管汇总表"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_total_bending"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:background="#96c1ff"
                android:textStyle="bold"
                android:text="弯曲度汇总表"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_total_tension"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:background="#96c1ff"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:text="耐张管汇总表"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:gravity="center"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
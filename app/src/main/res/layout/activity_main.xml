<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/icon_bj2"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="工程名："
                android:textSize="20sp"
                android:textColor="@color/color_E81010"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_project"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:tag="1"
                android:background="@color/colorBlue"
                android:textStyle="bold"
                android:hint="请输入工程名"
                android:textColorHint="#c8ffff"
                android:textColor="#c8ffff"
                android:textSize="20sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="标段："
                android:textSize="20sp"
                android:textColor="@color/color_E81010"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_block"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:tag="2"
                android:background="@color/colorBlue"
                android:textStyle="bold"
                android:hint="请输入标段"
                android:textColorHint="#c8ffff"
                android:textColor="#c8ffff"
                android:textSize="20sp"
                android:gravity="center"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="导线规格："
                android:textSize="20sp"
                android:textColor="@color/color_E81010"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_conductor"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:tag="2"
                android:background="@color/colorBlue"
                android:textStyle="bold"
                android:hint="请输入导线/地线规格"
                android:textColorHint="#c8ffff"
                android:textColor="#c8ffff"
                android:textSize="20sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="回路数："
                android:textSize="20sp"
                android:textColor="@color/color_E81010"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_loop"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:tag="2"
                android:background="@color/colorBlue"
                android:textStyle="bold"
                android:hint="请输入回路数"
                android:textColorHint="#c8ffff"
                android:textColor="#c8ffff"
                android:textSize="20sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="分裂数："
                android:textSize="20sp"
                android:textColor="@color/color_E81010"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_lineNum"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:background="@color/colorBlue"
                android:textStyle="bold"
                android:hint="请输入导线分裂数"
                android:textColorHint="#c8ffff"
                android:textColor="#c8ffff"
                android:textSize="20sp"
                android:gravity="center"
                android:inputType="phone"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="监理单位："
                android:textSize="20sp"
                android:textColor="@color/color_E81010"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_supervision"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:tag="3"
                android:background="@color/colorBlue"
                android:textStyle="bold"
                android:hint="请输入监理单位"
                android:textColorHint="#c8ffff"
                android:textColor="#c8ffff"
                android:textSize="20sp"
                android:gravity="center"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="施工单位："
                android:textSize="20sp"
                android:textColor="@color/color_E81010"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_construction"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:tag="4"
                android:background="@color/colorBlue"
                android:textStyle="bold"
                android:hint="请输入施工单位"
                android:textColorHint="#c8ffff"
                android:textColor="#c8ffff"
                android:textSize="20sp"
                android:gravity="center"/>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="500dp"
            android:layout_height="45dp"
            android:layout_marginTop="60dp">

            <TextView
                android:id="@+id/tv_login_out"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/ll_login_one"
                android:text="退出"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_go"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/ll_login_one"
                android:text="进入"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <View
                android:layout_width="180dp"
                android:layout_height="0.5dp"
                android:background="#c9ffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="南方电网公司"
                android:textSize="20sp"
                android:textColor="@color/white"/>
            <View
                android:layout_width="180dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="40dp"
                android:background="#c9ffff"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>